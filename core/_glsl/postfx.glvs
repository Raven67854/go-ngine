const float extent = 3;
const vec2 vPos[3] = vec2[](vec2(-1, -1), vec2(extent, -1), vec2(-1, extent));
const vec2 vTex[3] = vec2[](vec2(0, 0), vec2(extent - 1, 0), vec2(0, extent - 1));

/*
left-bottom
-1,-1

right-bottom
3,-1

left-top
-1,3


*/

out vec2 vTexCoords;

void main () {
	gl_Position = vec4(vPos[gl_VertexID], 0, 1);
	vTexCoords = vTex[gl_VertexID];
}
